#:import hex kivy.utils.get_color_from_hex

<MyLabel@Label>:
    size_hint: 1, None
    height: self.texture_size[1]
    font_size: '20sp'
    color: hex('#FFFFFF')
    
<MyTextInput@TextInput>:
    size_hint: 0.8, None
    height: '30dp'
    multiline: False
    font_size: '20sp'
    background_color: hex('#FFFFFF')
    foreground_color: hex('#000000')
    cursor_color: hex('#000000')
    cursor_width: '3sp'
    cursor_blink: True
    
<MyButton@Button>:
    size_hint: 0.5, None
    height: '50dp'
    font_size: '20sp'
    background_color: hex('#416FEC')
    color: hex('#FFFFFF')
    border_radius: ['20dp']
    border_width: '0dp'
    border_color: hex('#FFFFFF')
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.border_radius
    
<MyBoxLayout@BoxLayout>:
    orientation: 'vertical'
    padding: '20dp'
    spacing: '20dp'
    size_hint: 1, None
    height: self.minimum_height

<MyGridLayout@GridLayout>:
    cols: 2
    padding: '20dp'
    spacing: '20dp'
    size_hint: 1, None
    height: self.minimum_height
    
<MyFloatLayout@FloatLayout>:

<MyScreen@Screen>:
    background_color: hex('#F3F3F3')
    name: 'Main'
    
    MyFloatLayout:
        
        MyBoxLayout:
            size_hint: 0.8, None
            height: self.minimum_height
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            spacing: '10dp'
            
            MyLabel:
                text: 'What is your name?'
                
            MyTextInput:
                id: name_input
                hint_text: 'Name'
                
            MyLabel:
                text: 'How old are you?'
                
            MyTextInput:
                id: age_input
                hint_text: 'Age'
                input_filter: 'int'
                
        MyGridLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            
            MyButton:
                text: 'Clear'
                on_release: name_input.text = ''; age_input.text = ''
                
            MyButton:
                text: 'Submit'
                on_release: app.submit(name_input.text, age_input.text)


<DashboardCard@MDCard>
    md_bg_color: "#ffffff"
    elevation: 2
    orientation: "vertical"
    padding: 5

<CheckBoxCard@MDCard>
    orientation: 'vertical'
    md_bg_color: "#eeeeee"
    elevation: 1

<CheckBoxLabel@MDLabel>
    halign: "center"
    color: "#444444"
    font_style: "H6"
    font_size: 18

#Με τα παρακάτω θέτω χρώματα για τα widgets μέσα στο drawer

<DrawerClickableItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


        
<Round_Rectangle@MDCard>
    md_bg_color: "#5F9EA0"
    elevation: 1

<Q_Label@MDLabel>
    halign: "center"
    color: 1,1,1,1
    font_style: "H5"


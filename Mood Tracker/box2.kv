<Button>
    font_size: 32
    background_normal: ''
    background_color: utils.get_color_from_hex('#416fec')
    size_hint: (None,None)
    width: 200
    height: 50
    pos_hint: {'center_x': .5}

<Label>
    font_size: 20
    size_hint: (None,None)
    width: 100
    height: 50

<TextInput>
    size_hint: (None,None)
    width: 400
    height: 50

<RoundedButton_Blue@Button>
    background_normal: ""
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#416fec')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]

<RoundedButton_Red@Button>
    background_normal: ""
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#ff4040')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]


#: import utils kivy.utils
<MyBoxLayout>
    
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex ('#c3c8f7')
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.width

        padding: 10
        spacing: 20
        

        GridLayout:
            
            padding: 5
            spacing: 2
            cols:2

            
            Label:
                id: name_label
                text: "Name"  
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('416fec')                 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
            TextInput:
                id: name
                multiline: False
                

            Label:
                text: "Age"
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#416fec')                 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                
            TextInput:
                id: age
                multiline: False 
                 
            
            Label:
                text: "Gender"
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#416fec')                 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
            TextInput:
                id: gender
                multiline: False 
            
            Label:
                text: "Email"
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#416fec')                 
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
            TextInput:
                id: email
                multiline: False 

        RoundedButton_Blue:
            text: "AAA"


        RoundedButton_Red:
            text: "Clear"
            

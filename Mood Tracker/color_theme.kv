Screen:

    MDCard: #Κατασκευή καρτέλας
        size_hint: None , None
        size: 300,400
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        elevation: 2
        padding: 25
        spacing:25
        orientation: "vertical"
    
        MDLabel: 
            #Χαιρετισμός
            id: greet
            text: "Καλωσήρθατε!"
            font_size:25
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        
        MDTextField:
            id: user
            hint_text: "Όνομα Χρήστη"
            icon_right: "account"
            size_hint_x: None
            width:200
            font_size: 18
            pos_hint: {'center_x': 0.5}
        
        MDTextField:
            id: password
            hint_text: "Κωδικός"
            icon_right: "eye-off"
            size_hint_x: None
            width:200
            font_size: 18
            pos_hint: {'center_x': 0.5}
            password: True
        
        MDRoundFlatButton:
            text: "Σύνδεση"
            font_size: 12
            pos_hint: {'center_x': 0.5}
            on_press: app.log()
            

        MDRoundFlatButton:
            text: "Εκκαθάριση"
            font_size: 12
            pos_hint: {'center_x': 0.5}
            on_press: app.clear()